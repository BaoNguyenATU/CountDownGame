<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:CountDownGame"
       x:Class="CountDownGame.AppShell">

    <!-- Define the navigation structure of the app -->
    <TabBar>
        <ShellContent Title="Game" ContentTemplate="{DataTemplate local:MainPage}" />
        <ShellContent Title="History" ContentTemplate="{DataTemplate local:HistoryPage}" />
        <ShellContent Title="Settings" ContentTemplate="{DataTemplate local:SettingsPage}" />
    </TabBar>
</Shell>
