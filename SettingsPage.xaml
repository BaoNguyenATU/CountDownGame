<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CountDownGame.SettingsPage"
             Title="Settings">

    <StackLayout Padding="20" Spacing="20">

        <!-- Toggle Switch for Dark Mode -->
        <Label Text="Dark Mode" FontSize="20" HorizontalOptions="Center" />
        <Switch x:Name="DarkModeSwitch" Toggled="OnDarkModeToggled"/>

        <!-- Slider for Number of Rounds -->
        <Label x:Name="RoundsLabel" Text="Rounds: 5" FontSize="20" HorizontalOptions="Center" />
        <Slider x:Name="RoundsSlider" Minimum="1" Maximum="10" ValueChanged="OnRoundsSliderValueChanged"/>

    </StackLayout>
</ContentPage>
